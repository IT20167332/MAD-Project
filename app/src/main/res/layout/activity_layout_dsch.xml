<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:background="#EA0707"
    app:barrierMargin="5dp"
    app:cardBackgroundColor="#D89191">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/D_cl_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#8FFFAE57"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/D_destination"
            app:layout_constraintStart_toStartOf="@+id/D_destination" />

        <Button
            android:id="@+id/D_btn_decline"
            android:layout_width="160dp"
            android:layout_height="51dp"
            android:text="Decline"
            app:layout_constraintBaseline_toBaselineOf="@+id/D_btn_accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/D_btn_accept" />

        <TextView
            android:id="@+id/D_text_name"
            android:layout_width="363dp"
            android:layout_height="39dp"
            android:layout_marginTop="52dp"
            android:text="Text"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/D_text_date"
            android:layout_width="97dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/D_txt_destand"
            android:layout_width="109dp"
            android:layout_height="38dp"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/D_text_date"
            app:layout_constraintStart_toEndOf="@+id/D_text_date" />

        <View
            android:id="@+id/divider"
            android:layout_width="389dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/D_text_date"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/divider2"
            android:layout_width="389dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/D_text_name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_title"
            app:layout_constraintBottom_toTopOf="@+id/D_text_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.562" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.254"
            app:layout_constraintStart_toStartOf="@+id/D_txt_destand" />

        <Button
            android:id="@+id/D_btn_accept"
            android:layout_width="174dp"
            android:layout_height="51dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:text="Accept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/D_txt_destand" />

        <TextView
            android:id="@+id/D_destination"
            android:layout_width="164dp"
            android:layout_height="36dp"
            android:layout_marginTop="28dp"
            android:text="@string/etDista"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/D_text_date"
            app:layout_constraintTop_toBottomOf="@+id/D_text_date" />

        <TextView
            android:id="@+id/D_txt_accept"
            android:layout_width="157dp"
            android:layout_height="38dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="4dp"
            android:text="@string/Notis_accept"
            android:textColor="#76FF03"
            android:textSize="25sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="61dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/etDista"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/D_txt_destand"
            app:layout_constraintStart_toEndOf="@+id/D_txt_destand" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>